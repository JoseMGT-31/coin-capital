---
import Layout from "../layouts/Layout.astro"
---

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const form = document.querySelector("#form2fa");

        if (form) {
            form.addEventListener("submit", function(event) {
                event.preventDefault(); // Prevenir envío predeterminado del formulario

                const password = (document.getElementById("2FA") as HTMLInputElement).value;

                if (password === "1234") {
                    alert("Código correcto");
                    window.location.href = "/login";
                } else {
                    alert("Código incorrecto");
                }
            });
        }
    });

</script>

<Layout title="Autenficador">
    <section>
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
            <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
                <img src="/images/logo_ofc.png" class="mr-3 h-6 sm:h-9" alt="Flowbite Logo" />
                <span class="self-center text-xl font-bold whitespace-nowrap dark:text-white">Coin Capital</span>
            </a>
            <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
                <div class="flex flex-col p-6 space-y-4 md:space-y-6 sm:p-8 items-center justify-center">
                    <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                        Escane el codigo QR
                    </h1>
                    <p class="text-base text-gray-500 dark:text-gray-400">Es necesario tener un verificacion 2FA para asegurar su cuenta</p>

                    <img src="https://upload.wikimedia.org/wikipedia/commons/d/d7/Commons_QR_code.png" alt="">
                    <form id = "form2fa" action="" class="w-full">
                        <div class="mb-4">
                            <label for="2FA" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Ingrese el codigo de 4 digitos</label>
                            <input type="number" name="number" id="2FA" placeholder="1234" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required="">
                        </div>

                        <button type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Verificar</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</Layout>